@page
@model AddStudentModel


<form method="post">

    <div class="d-flex">
        <div class="form-group">
            <label asp-for="InputStudent.LastName"></label>
            <input asp-for="InputStudent.LastName" class="form-control" id="AddLastName">
            <span asp-validation-for="InputStudent.LastName" style="color:darkred"></span>
        </div>

        <div class="form-group px-5">
            <label asp-for="InputStudent.FirstName"></label>
            <input asp-for="InputStudent.FirstName" class="form-control" id="AddFirstName">
            <span asp-validation-for="InputStudent.FirstName" style="color:darkred"></span>
        </div>

        <div class="form-group">
            <label asp-for="InputStudent.MiddleName"></label>
            <input asp-for="InputStudent.MiddleName" class="form-control" id="AddMiddleName">
            <span asp-validation-for="InputStudent.MiddleName" style="color:darkred"> </span>
        </div>
    </div>

    <div class="d-flex">
        <div class="form-group px-5">
            <label asp-for="InputStudent.Email"></label>
            <input asp-for="InputStudent.Email" class="form-control" style="width:300px" id="AddEmail">
            <span asp-validation-for="InputStudent.Email" style="color:darkred"></span>
        </div>
    </div>

    <div class="form-group col mb-2 me-5">
        <label asp-for="InputStudent.SelectedValueGroup"></label>
        <select class="mt-2" asp-for="InputStudent.SelectedValueGroup" asp-items="Model.GroupItems"></select>
    </div>

    <button type="submit" class="btn btn-primary" style="background-color:cadetblue; width:130px;">Submit</button>
    <a asp-page="Index" class="btn btn-secondary" width:130px;">Back</a>
</form>